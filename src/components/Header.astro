---
import IconArchive from "@/assets/icons/IconArchive.svg";
import IconMenuDeep from "@/assets/icons/IconMenuDeep.svg";
import IconMoon from "@/assets/icons/IconMoon.svg";
import IconSearch from "@/assets/icons/IconSearch.svg";
import IconSunHigh from "@/assets/icons/IconSunHigh.svg";
import IconX from "@/assets/icons/IconX.svg";
import LinkButton from "./LinkButton.astro";
import { SITE } from "@/config";

const { pathname } = Astro.url;

const currentPath =
  pathname.endsWith("/") && pathname !== "/" ? pathname.slice(0, -1) : pathname;

const isActive = (path: string) => {
  const currentPathArray = currentPath.split("/").filter(p => p.trim());
  const pathArray = path.split("/").filter(p => p.trim());

  return currentPath === path || currentPathArray[0] === pathArray[0];
};
---

<header class="sticky top-0 z-50 border-b border-white/20 bg-white/70 backdrop-blur-xl transition-all duration-300 dark:border-slate-700/40 dark:bg-slate-900/60 supports-[backdrop-filter]:bg-white/50 dark:supports-[backdrop-filter]:bg-slate-900/50">
  <a
    id="skip-to-content"
    href="#main-content"
    class="absolute start-16 -top-full z-50 rounded-full bg-accent px-4 py-2 text-xs font-semibold uppercase tracking-[0.24em] text-white shadow transition focus:top-5 focus:outline-none focus-visible:ring-2 focus-visible:ring-accent/60"
  >
    Skip to content
  </a>
  <div class="mx-auto flex w-full max-w-6xl items-center justify-between px-4 py-4 sm:px-6 sm:py-5">
    <a
      href="/"
      class="relative z-10 whitespace-nowrap bg-gradient-to-r from-emerald-600 via-teal-600 to-cyan-600 bg-clip-text text-xl font-bold text-transparent transition-transform duration-200 hover:scale-[1.02] sm:text-2xl"
    >
      {SITE.title}
    </a>
    <nav
      id="nav-menu"
      class="relative flex w-auto items-center justify-end"
    >
      <button
        id="menu-btn"
        class="inline-flex size-10 items-center justify-center rounded-full border border-white/40 bg-white/70 p-2 text-foreground shadow transition hover:border-accent/60 hover:text-accent focus-visible:outline focus-visible:outline-2 focus-visible:outline-accent sm:hidden dark:border-slate-700/40 dark:bg-slate-900/70"
        aria-label="Open Menu"
        aria-expanded="false"
        aria-controls="menu-items"
      >
        <IconX id="close-icon" class="hidden size-5" />
        <IconMenuDeep id="menu-icon" class="size-5" />
      </button>
      <ul
        id="menu-items"
        class:list={[
          "absolute end-0 top-14 mt-2 grid w-56 grid-cols-2 gap-3 rounded-3xl border border-white/40 bg-white/90 p-5 text-sm shadow-2xl backdrop-blur-xl transition-all sm:static sm:mt-0 sm:flex sm:w-auto sm:items-center sm:gap-4 sm:rounded-full sm:border-0 sm:bg-transparent sm:p-0 sm:shadow-none dark:border-slate-700/40 dark:bg-slate-900/90 sm:dark:bg-transparent",
          "[&>li>a]:block [&>li>a]:rounded-full [&>li>a]:px-4 [&>li>a]:py-2 [&>li>a]:text-center [&>li>a]:font-medium [&>li>a]:transition [&>li>a:hover]:bg-accent-soft [&>li>a:hover]:text-accent sm:[&>li>a]:px-3 sm:[&>li>a]:py-2",
          "hidden",
          "sm:flex",
        ]}
      >
        <li class="col-span-2 sm:col-span-1">
          <a
            href="/posts"
            class:list={[
              { "bg-accent-soft text-accent shadow-sm": isActive("/posts") },
            ]}
          >
            Posts
          </a>
        </li>
        <li class="col-span-2 sm:col-span-1">
          <a
            href="/tags"
            class:list={[
              { "bg-accent-soft text-accent shadow-sm": isActive("/tags") },
            ]}
          >
            Tags
          </a>
        </li>
        <li class="col-span-2 sm:col-span-1">
          <a
            href="/cheatsheets"
            class:list={[
              { "bg-accent-soft text-accent shadow-sm": isActive("/cheatsheets") },
            ]}
          >
            Cheatsheets
          </a>
        </li>
        <li class="col-span-2 sm:col-span-1">
          <a
            href="/about"
            class:list={[
              { "bg-accent-soft text-accent shadow-sm": isActive("/about") },
            ]}
          >
            About
          </a>
        </li>
        <li class="col-span-2 sm:col-span-1">
          <a
            href="/cv"
            class:list={[
              { "bg-accent-soft text-accent shadow-sm": isActive("/cv") },
            ]}
          >
            CV
          </a>
        </li>
        {
          SITE.showArchives && (
            <li class="col-span-2 flex items-center justify-center sm:col-span-1 sm:justify-start">
              <LinkButton
                href="/archives"
                class:list={[
                  "flex !px-3 !py-2 text-sm transition hover:-translate-y-0.5",
                  {
                    "bg-accent-soft text-accent shadow-sm": isActive("/archives"),
                  },
                ]}
                ariaLabel="archives"
                title="Archives"
              >
                <IconArchive class="size-4" />
                <span class="sm:sr-only">Archives</span>
              </LinkButton>
            </li>
          )
        }
        <li class="col-span-1 flex items-center justify-center">
          <LinkButton
            href="/search"
            class:list={[
              "flex !px-3 !py-2 transition hover:-translate-y-0.5",
              { "[&>svg]:stroke-accent text-accent": isActive("/search") },
            ]}
            ariaLabel="search"
            title="Search"
          >
            <IconSearch class="size-4" />
            <span class="sr-only">Search</span>
          </LinkButton>
        </li>
        {
          SITE.lightAndDarkMode && (
            <li class="col-span-1 flex items-center justify-center">
              <button
                id="theme-btn"
                class="relative flex size-12 items-center justify-center rounded-full border border-white/40 bg-white/80 p-3 text-foreground shadow transition hover:-translate-y-0.5 hover:border-accent/60 hover:text-accent focus-visible:outline focus-visible:outline-2 focus-visible:outline-accent sm:size-10 sm:p-2 dark:border-slate-700/40 dark:bg-slate-900/70"
                title="Cycle themes (Light → Dark → Cyber → Academic)"
                aria-label="Cycle themes"
                aria-live="polite"
              >
                <IconMoon class="absolute top-1/2 left-1/2 size-5 -translate-x-1/2 -translate-y-1/2 scale-100 rotate-0 transition-all dark:scale-0 dark:-rotate-90" />
                <IconSunHigh class="absolute top-1/2 left-1/2 size-5 -translate-x-1/2 -translate-y-1/2 scale-0 rotate-90 transition-all dark:scale-100 dark:rotate-0" />
                <span id="theme-indicator" class="absolute -bottom-1 -right-1 flex h-3 w-3 items-center justify-center rounded-full bg-accent text-[8px] font-bold text-white opacity-0 transition-opacity dark:opacity-100" aria-hidden="true"></span>
              </button>
            </li>
          )
        }
      </ul>
    </nav>
  </div>
</header>

<script>
  function toggleNav() {
    const menuBtn = document.querySelector("#menu-btn");
    const menuItems = document.querySelector("#menu-items");
    const menuIcon = document.querySelector("#menu-icon");
    const closeIcon = document.querySelector("#close-icon");

    if (!menuBtn || !menuItems || !menuIcon || !closeIcon) return;

    menuBtn.addEventListener("click", () => {
      const openMenu = menuBtn.getAttribute("aria-expanded") === "true";

      menuBtn.setAttribute("aria-expanded", openMenu ? "false" : "true");
      menuBtn.setAttribute("aria-label", openMenu ? "Open Menu" : "Close Menu");

      menuItems.classList.toggle("hidden");
      menuIcon.classList.toggle("hidden");
      closeIcon.classList.toggle("hidden");
    });
  }

  toggleNav();

  // Runs on view transitions navigation
  document.addEventListener("astro:after-swap", toggleNav);
</script>
