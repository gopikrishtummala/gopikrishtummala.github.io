<Layout title="CV | Resume">
  <Main pageTitle="Curriculum Vitae" pageDesc="Download my resume or view it online">
    <div class="flex flex-col items-center gap-6">
      <div class="w-full max-w-3xl rounded-2xl border border-white/40 bg-white/50 p-6 shadow-lg backdrop-blur-sm dark:border-slate-700/40 dark:bg-slate-900/50 sm:p-8">
        <div class="flex flex-col items-center gap-4 text-center">
          <h2 class="text-2xl font-semibold text-foreground">Gopi Krishna Tummala</h2>
          <p class="text-base text-secondary-foreground">
            Senior Machine Learning Engineer
          </p>
          <div class="flex flex-wrap items-center justify-center gap-4 text-sm text-secondary-foreground">
            <span>üìß tummalag.cseosu@gmail.com</span>
            <span>üìç Fremont, CA</span>
            <span>üîó <a href="https://www.linkedin.com/in/gopi-krishna-tummala-00294415/" target="_blank" rel="noopener noreferrer" class="text-accent hover:underline">LinkedIn</a></span>
          </div>
        </div>
      </div>

      <div class="flex flex-col gap-4 sm:flex-row sm:justify-center">
        <a
          href="/resume.pdf"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center gap-2 rounded-full bg-accent px-6 py-3 text-base font-medium text-white shadow-lg transition-all hover:scale-105 hover:shadow-xl focus-visible:outline focus-visible:outline-2 focus-visible:outline-accent"
