---
import type { Page } from "astro";
import type { CollectionEntry } from "astro:content";
import IconArrowLeft from "@/assets/icons/IconArrowLeft.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import LinkButton from "./LinkButton.astro";

export interface Props {
  page: Page<CollectionEntry<"blog">>;
}

const { page } = Astro.props;
---

{
  page.lastPage > 1 && (
    <nav
      class="mt-auto mb-12 flex items-center justify-center gap-4 text-sm text-secondary-foreground"
      aria-label="Pagination"
    >
      <LinkButton
        disabled={!page.url.prev}
        href={page.url.prev as string}
        class:list={[
          "select-none gap-2",
          { "opacity-50 pointer-events-none": !page.url.prev },
        ]}
        ariaLabel="Previous"
      >
        <IconArrowLeft class="inline-block size-4 rtl:rotate-180" />
        Prev
      </LinkButton>
      <span class="rounded-full border border-white/30 bg-white/70 px-4 py-2 text-xs font-semibold uppercase tracking-[0.3em] dark:border-slate-700/40 dark:bg-slate-900/70">
        {page.currentPage} / {page.lastPage}
      </span>
      <LinkButton
        disabled={!page.url.next}
        href={page.url.next as string}
        class:list={[
          "select-none gap-2",
          { "opacity-50 pointer-events-none": !page.url.next },
        ]}
        ariaLabel="Next"
      >
        Next
        <IconArrowRight class="inline-block size-4 rtl:rotate-180" />
      </LinkButton>
    </nav>
  )
}
