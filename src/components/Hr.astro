---
export interface Props {
  noPadding?: boolean;
  ariaHidden?: boolean;
  class?: string;
}

const { noPadding = false, ariaHidden = true, class: className } = Astro.props;
---

<div
  class:list={[
    "mx-auto w-full max-w-6xl",
    noPadding ? "px-0" : "px-4 sm:px-6",
    className,
  ]}
>
  <hr
    class="border-white/30 dark:border-slate-700/50"
    aria-hidden={ariaHidden}
  />
</div>
